{
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ESNext",
      "declaration": true,
      "declarationMap": true,
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src"]
  }
  